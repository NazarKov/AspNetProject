@using houses.Models
@model ModelUser
@{
    ViewBag.Title = "order";
}

<div class="registerForm" style="height:520px;margin-bottom:120px;">
    <form name="registration_form" class="form registration" method="post" style="height:400px;" action="~/Home/addorder">

        <label for="userN">ФІО:</label>
        <input name="userN" type="text" value="@Model.user.name" id="userName" class="form-control" required>

        <label for="userEmail">Email:</label>
        <input name="userEmail" type="email" value="@Model.user.Email" id="userEmail" class="form-control" required>

        <label for="userPhone">Телефон:</label>
        <input name="userPhone" id="userEmail" value="@Model.user.phone" class="form-control" required>

        <label for="house">Назва будинку:</label>
        <input name="house" id="userEmail" value="@Request.QueryString["house"].ToString()" class="form-control" required>

        <input name="register" type="submit" value="Оформити" class="btn btn-success form-control" style="margin-top: 30px">
        <div class="reg">
            @Html.ActionLink("назад?", "about", "Home", new { category = "all" }, new { @class = "" })
        </div>
    </form>
</div>
