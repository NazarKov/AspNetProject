
@{
    ViewBag.Title = "ViewEmail";
}

<div class="registerForm" style="height:520px;margin-bottom:120px;">
    <div style="height:250px;"  class="form registration">
        @using (Html.BeginForm("Upload", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
                <label for="upload">Фото:</label>
                <input name="upload" class="form-control" type="file">

                <input name="register" type="submit" value="Завантажити" class="btn btn-success form-control" style="margin-top: 30px">
                <div class="reg">
                    @Html.ActionLink("Назад?", "Profile", "Home", new { area = "" }, new { @class = "" })
                </div>
           
        }
    </div>
</div>
@Html.BeginForm()